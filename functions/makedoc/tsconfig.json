{
    "compilerOptions": {
        "module": "es2020",
        "outDir": "./dist",
        "rootDir": "./",
        "target": "es2017",
        "lib": [
            "es2017",
            "DOM",
            "DOM.Iterable"
        ],
        "types": ["node","puppeteer"],
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "pretty": true
    },
    "include": [
        "index.ts"
    ]
}
